{
    "excelPaths": [
        "../0_no_loc/data",
        "data"
    ],
    "validation": {
        "searchFileRoot": "../../Client/Resources",
        "sheetNameReg": "^[A-Z][a-zA-Z0-9]*$",
        "colNameReg": "^[A-Z][a-zA-Z0-9_]*$",
        "enumNameReg": "^E[A-Z][A-Za-z0-9_]*$",
        "enumFieldNameReg": "[A-Z][a-zA-Z0-9_]*$",
    },
    "localization": {
		"mode":"auto_gen_key", 
		"sheetName": "Loc",
		"defaultLang": "zh-Hans",
		"useHashId": true,		
		"desc":"mode: none, normal,auto_gen_key",		 
    },
	"exportRule":{
		"enable": true,
		"dir": "Output/Rule",
	},
	"exportLocTrans":{
		"enable": true,
		"dir": "Output",
	},
    "exportClient": {
        "csv": {
            "enable": true,
            "dir": "Output/Client/Data",
        },
        "bin": {
            "enable": true,
            "dir": "Output/Client/Data",
        },
        "csharp": {
            "enable": true,
            "namespaceName": "Test",
            "classPrefix": "T",
            "dir": "Output/Client/CS",		
			"locIdPrefix": "",
            "header": "using System;\nusing System.Collections;\nusing System.Collections.Generic;",
        },		 
        "lua": {
            "enable": true,
            "classPrefix": "T",
			"locIdPrefix": "TC_",
            "dir": "Output/Client/Lua"
        },
    },
    "exportServer": {
        "csv": {
            "enable": true,
            "dir": "Output/Server/Data",
        },
        "bin": {
            "enable": true,
            "dir": "Output/Server/Data",
        },
        "csharp": {
            "enable": true,
            "namespaceName": "Test",
            "classPrefix": "T",
            "dir": "Output/Server/CS",
			"locIdPrefix": "TC_",
            "header": "using System;\nusing System.Collections;\nusing System.Collections.Generic;",
        },
        "lua": {
            "enable": true,
            "classPrefix": "T",
			"locIdPrefix": "TC_",
            "dir": "Output/Server/Lua"
        },
        "go": {
            "enable": true,
            "packageName": "config",
            "classPrefix": "T",
            "dir": "Output/Server/Go",
        }
    }
}
